{
  "extends": ["@repo/typescript-config/nextjs.json"],
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../../social-sidebar.tsx"
  ],
  "exclude": ["node_modules"]
}
